<%- include('partials/header.ejs') %>

<main>
    <div class="container-access">
        <div class="container-contents">
            <div class="form-title">
                <p>Cadastrar uma conta</p>
            </div>
            <form class="form" method="post" action="/cadastro" >
                <label for="nome">Nome</label>
                <input type="text" name="nome" id="nome" 
                placeholder="JosÃ© da Silva" 
                value="<%= locals.oldData ? oldData.name : null %>" required>

                <% if(locals.errors && errors.nome) { %> 
                    <p style="color: red;"><%=errors.nome.msg%></p>
                <% } %>

                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="exemplo@exemplo.com" required>

                <% if(locals.errors && errors.email) { %> 
                    <p style="color: red;"><%=errors.email.msg%></p>
                <% } %>

                <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" placeholder="*******" required>

                <% if(locals.errors && errors.senha) { %> 
                    <p style="color: red;"><%=errors.senha.msg%></p>
                <% } %>
                
                <div>
                    <input type="hidden" name="created_at" value="<%= new Date() %>">
                    <input type="hidden" name="updated_at" value="<%= new Date() %>">
                </div>
                <div class="form-button">
                    <button type="submit">Cadastrar</button>
                </div>
            </form>
            <div class="registered">
                <p>JÃ¡ tem cadastro? <a href="/login">Clique aqui</a></p>
            </div>
        </div>
    </div>
</main>
<%- include('partials/footer.ejs') %>