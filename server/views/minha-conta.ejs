<%- include('partials/account-header.ejs') %>

<main class="main-flex">
    <section class="container-side">
        <div class="container-button">
            <a class="btn-side" href="/conta" type="button" title="Acessar calendário">Calendário</a>
        </div>
        <div class="container-nav">
            <nav>
                <ul>
                    <li>
                        <input type="radio" name="tabs" id="radio-personal-info" class="inputs-menu" checked>
                        <label for="radio-personal-info" class="label-menu">
                            <a href="/conta/minha-conta">
                            <img class="li-img" src="/images/icon-personal.png">
                            <p class="nav-text-link ">Informações Pessoais</p>
                            
                            </a>
                        </label>
                    </li>
                    <li>
                        <input type="radio" name="tabs" id="radio-signature" class="inputs-menu">
                        <label for="radio-signature" class="label-menu">
                            <a id="link-signature" href="/conta/minha-conta/assinatura">
                            <img class="li-img" src="/images/icon-signature.png">
                                <p class="nav-text-link ">Assinatura</p>
                            </a>
                        </label>
                    </li>
                </ul>
            </nav>
        </div>
    </section>
    <section class="section-main sec-info">
        <h1 class="account-title">Informações da sua conta</h1>
        <div class="container-info">
            <div>
                <h2>Dados Gerais</h2>
                <div>
                    <img id="img-avatar" src="/images/avatar-exemple2.jpg">
                </div>
                <div class="info-data"> 
                    <p>Nome</p>
                    <p>[usuario.nome]</p>
                </div>
                <div class="info-data"> 
                    <p>Email</p>
                    <p>[usuario.email]</p>
                </div>
                <div class="info-data">
                    <p>Senha</p>
                    <p>******</p>
                </div>
                <div class="container-btn">
                    <a class="btn-default" id="btn-edit" href="">
                        Editar
                    </a>
                </div>
                
            <div class="container-delete">
                <h2>Excluir conta</h2>
                <div class="container-del-text">
                    <p>
                        Esta ação não poderá ser desfeita e todos os dados relacionados 
                        ao seu usuário serão excluídos.
                    </p>
                </div>
                <div class="container-btn">
                    <a class="btn-delete" href="">
                        Excluir conta
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>
</body>
</html>