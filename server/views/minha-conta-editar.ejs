<%- include('partials/account-header.ejs') %>


<main class="main-flex">
    <section class="container-side" id="container-side">
        <div id="contents-side">
            <div class="container-button">
                <a class="btn-side" href="/conta" type="button" title="Acessar calendário">Calendário</a>
            </div>
            <div class="container-nav">
                <nav>
                    <ul>
                        <li>
                            <input type="radio" name="tabs" id="radio-personal-info" class="inputs-menu" checked>
                            <label for="radio-personal-info" class="label-menu">
                                <a href="/conta/minha-conta">
                                <img class="li-img" src="/images/icon-personal.png">
                                <p class="nav-text-link ">Informações Pessoais</p>
                                
                                </a>
                            </label>
                        </li>
                        <li>
                            <input type="radio" name="tabs" id="radio-signature" class="inputs-menu">
                            <label for="radio-signature" class="label-menu">
                                <a id="link-signature" href="/conta/assinatura">
                                <img class="li-img" src="/images/icon-signature.png">
                                    <p class="nav-text-link ">Assinatura</p>
                                </a>
                            </label>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
    <section class="section-main sec-info">
        <h1 class="account-title">Informações da sua conta</h1>
        <div class="container-info">
            <div class="container-edit">
                <h2>Dados Gerais</h2>
                <div class="info-edit">
                    <label for="user-img">Imagen de perfil</label for="user-nome">
                    <input type="file" name="user-avatar" id="user-avatar">
                </div>
                <div class="info-edit"> 
                    <label for="user-nome">Nome</label for="user-nome">
                    <input class="input-account" type="text" name="user-nome" id="user-nome">
                </div>
                <div class="info-edit"> 
                    <label for="user-email">Email</label for="user-email">
                    <input class="input-account" type="email" name="user-email" id="user-email">
                </div>
                <div class="info-edit">
                    <label for="user-password">Senha</label for="user-password">
                    <input class="input-account" type="password" name="user-password" id="user-password">
                </div>
                <div class="container-btn">
                    <a class="btn-default" id="btn-edit" href="">
                        Salvar
                    </a>
                </div>
            </div>    
        </div>
    </section>
</main>
</body>
</html>