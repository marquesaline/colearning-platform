<%- include('../partials/header-admin.ejs') %>
<section class="section-main section-admin">

  <!-- Tela de usuários -->
  <% if(locals.user) { %>
    <h1 class="admin-title">Excluir usuário</h1>
    <section class="container-list ">
      <form
        class="form-user"
        method="post"
        action="/admin/usuarios/<%=user.id%>/excluir?_method=delete"
      >
        <div class="info-edit">
          <label for="nome">Nome</label>
          <input
            class="input-account"
            type="text"
            id="nome"
            value="<%= user.nome%>"
            name="nome"
            disabled
          />
        </div>
        <div class="info-edit">
          <label for="email">Email</label>
          <input
            class="input-account"
            type="email"
            id="email"
            value="<%= user.email%>"
            name="email"
            disabled
          />
        </div>
        <div class="info-edit">
          <label for="senha">senha</label>
          <input
            class="input-account"
            type="password"
            id="senha"
            value="<%= user.senha%>"
            name="senha"
            disabled
          />
        </div>
        <div class="btn-options">
          <button class="button-exclude btn-delete">Excluir usuário</button>
        </div>
      </form>
    </section>
  <% } %>

  <!-- Tela de agendas -->
  <% if(locals.agenda) { %>
    <h1 class="admin-title">Excluir agenda</h1>
    <section class="container-list ">
      <form
        class="form-user"
        method="post"
        action="/admin/agendas/<%=agenda.id%>/excluir?_method=delete"
      >  
          <div class="conteiners-form">
              <label class="form-label" for="userId">Id do usuário</label>
              <input 
                  type="number" 
                  name="userId" 
                  id="userId" 
                  value="<%= agenda.userId %>" 
                  disabled
              >
          </div>
        <div class="info-edit">
          <label class="form-label" for="nome">Nome da agenda</label>
          <input
            class="input-account"
            type="text"
            id="nome"
            value="<%= agenda.title%>"
            name="nome"
            placeholder="Digite o nome do usuário"
            disabled
          />
        </div>
        <div class="info-edit">
          <label class="form-label" for="nome">URL</label>
          <input
            class="input-account"
            type="text"
            id="nome"
            value="<%= agenda.url%>"
            name="nome"
            disabled
          />
        </div>
        <div class="info-edit">
          <label class="form-label" for="email">Duração</label>
          <input
            class="input-account"
            type="time"
            id="duration"
            value="<%= agenda.duration%>"
            name="duration"
          
            disabled
          />
        </div>
        <div class="conteiners-form">
          <label class="form-label" for="start">Período de agendamento</label>
          <div class="conteiner-dates">
              <label for="start">De</label>
              <input type="date" name="start" id="start" value="<%= agenda.start %>" class="input-dates" disabled>
              <label for="end">até</label>
              <input type="date" name="end" id="end" value="<%= agenda.end %>" class="input-dates" disabled>
          </div>
          
      </div>
        
        <div class="btn-options">
          <input type="hidden" name="modifed_at" value="<%= new Date() %>" />
          <button class="button-exclude btn-delete">Excluir agenda</button>
        </div>
      </form>
    </section>
  <% } %>
  
  <!-- Tela de agendamentos -->
  <% if(locals.event) { %>
    <h1 class="account-title">Excluir agendamento</h1>
    <section class="container-list ">
    
      <form
        class="form-user"
        method="post"
        action="/admin/agendamentos/<%=event.id%>/excluir?_method=delete"
       
      >
          <div class="conteiners-form">
              <label class="form-label" for="userId">Id do usuário</label>
              <input type="number" name="userId" id="userId" value="<%= event.userId %>" disabled>
          </div>
          <div class="conteiners-form">
              <label class="form-label" for="agendaId">Id da agenda</label>
              <input type="number" name="agendaId" id="agendaId" value="<%= event.agendaId %>" disabled>
          </div>
          <div class="conteiners-form">
              <label class="form-label" for="title">Nome do aluno</label>
              <input type="text" name="title" id="title" value="<%= event.title %>" disabled>
          </div>
          <div class="conteiners-form">
              <label class="form-label" for="emailAluno">Email do aluno</label>
              <input type="email" name="emailAluno" id="emailAluno" value="<%= event.emailAluno %>" disabled>
          </div>
          <div class="conteiners-form">
              <label class="form-label" for="telefoneAluno">Telefone do aluno</label>
              <input type="tel" name="telefoneAluno" id="telefoneAluno" value="<%= event.telefoneAluno %>" disabled>
          </div>
          <div class="conteiners-form">
              <label class="form-label" for="start">Data</label>
              <input type="date" name="start" id="start" value="<%= event.start %>" class="input-dates" disabled>
          </div>
          <div class="conteiners-form">
              <label class="form-label" for="startTime">Horário</label>
              <input type="time" name="startTime" id="startTime" value="<%= event.startTime %>" disabled>
          </div>
          <div class="conteiners-form">
              <label class="form-label" for="description">Descrição</label>
              <textarea name="description" id="description" value="<%= event.description %>" disabled></textarea>
          </div>
          
          <div>
              <input type="hidden" name="created_at" value="<%= event.createdAt %>">
              <input type="hidden" name="ipdated_at" value="<%= new Date() %>">
          </div>
      
          <div class="btn-options">
              <button class="button-edit btn-default">Excluir</button>
          </div>
        </form>
    </section>
  <% } %>



  <% if(locals.contact) { %>
    <h1 class="admin-title">Excluir usuário</h1>
    <section class="container-list ">
      <form
        class="form-user"
        method="post"
        action="/admin/contatos/<%=contact.id%>/excluir?_method=delete"
      
      >
        <div class="info-edit">
          <label for="nome">Nome</label>
          <input
            class="input-account"
            type="text"
            id="nome"
            value="<%= contact.nome%>"
            name="nome"
            placeholder="Digite o nome do usuário"
            disabled
          />
        </div>
        <div class="info-edit">
          <label for="email">Email</label>
          <input
            class="input-account"
            type="email"
            id="email"
            value="<%= contact.email%>"
            name="email"
            placeholder="Digite o email"
            disabled
          />
        </div>
        <div class="info-edit">
          <label for="telefone">Telefone</label>
          <input
            class="input-account"
            type="text"
            id="telefone"
            value="<%= contact.telefonee%>"
            name="telefone"
            disabled
          />
        </div>
        <div class="info-edit">
          <label for="assunto">Assunto</label>
          <input
            class="input-account"
            type="text"
            id="assunto"
            value="<%= contact.assunto%>"
            name="assunto"
            disabled
          />
        </div>
        <div class="info-edit">
          <label for="mensagem">Mensagem</label>
          <input
            class="input-account"
            type="text"
            id="mensagem"
            value="<%= contact.mensagem%>"
            name="mensagem"
            disabled
          />
        </div>
        <div class="btn-options">
          <button class="button-exclude btn-delete">Excluir contato</button>
        </div>
      </form>
    </section>
  <% } %>
  
</main>
</body>
</html>
