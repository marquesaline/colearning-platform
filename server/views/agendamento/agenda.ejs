<%- include('../partials/agendamento-header.ejs') %>
    <main>
        <section class="section-agenda">
            <h1 class="title-h1-agenda"><%= agenda.title %> </h1>
            <div>
                <input hidden id="agenda-start" value="<%= agenda.start%>">
                <input hidden id="agenda-end" value="<%= agenda.end%>">
                <input hidden id="businessHours" value="<%= businessHours %>">
                <input hidden id="events" value="<%= events %>">
            </div>
        </section>
        <section class="section-calendar">
            
            <div id='calendar'></div>
            <div class="div-instruction">
                <p>Para agendar clique em uma data</p>
            </div>
    
            <div id="myModal" class="modal" style="display: none;">

                <!-- Modal content -->
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <h2>Novo agendamento</h2>
                    <form method="post" action="/agendamento/<%=user.slug%>/<%=agenda.id%>">
                        <div>
                            <h3>Dados do agendamento</h3>
                            <div>
                                <label for="date">Data do agendamento</label>
                                <input type="date" name="start" id="start" disabled>
                            </div>
                            <div>
                                <label for="startTime">Horário do agendamento</label>
                                <input type="time" name="startTime" id="startTime" onchange="getTime()" 
                                min="00:00" max="24:00" 
                                title="Horário do agendemento. Deve ser posterior ao horário atual"
                                placeholder="08:00" required>
                                <div class="alerts" id="alert">
                                    <p>Não é possível agendar nesse horário. Informe outro horário. </p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h3>Dados pessoais</h3>
                            <div>
                                <label for="title">Nome completo</label>
                                <input type="text" name="title" id="title" class="inputModel" placeholder="José da Silva"  required>
                            </div>
                            <div>
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" class="inputModel" placeholder="email@email.com" required>
                            </div>
                            <div>
                                <label for="telefone">Telefone</label>
                                <input type="tel" name="telefone" class="inputModel" id="telefone" placeholder="(99) 99999-9999">
                            </div>
                            <div>
                                <label for="description">Descrição</label>
                                <textarea name="description" id="description"
                                rows="3"  class="inputModel" placeholder="Descreva o assunto que está com dúvidas">
                                </textarea>
                            </div>
                            <div>
                                <input type="hidden" name="created_at" value="<%= new Date() %>">
                                <input type="hidden" name="modified_at" value="<%= new Date() %>">
                            </div>
                            <div class="div-submit">
                                <button type="submit" class="btn-default" id="submit">Agendar</button>
                            </div>
                        </div>
                    </form>
                </div>
            
            </div>     
        </section>      
        <script>
            $(document).ready(function(){
                $('#telefone').mask('(00) 00000-0000');
                
            });
        </script>

        <script type="text/javascript" src="/javascripts/agenda.js"></script>
    
    </main>

<%- include('../partials/agendamento-footer.ejs') %>