<%- include('partials/header.ejs') %>

<main>
  <h1><%= title %></h1>
  <%- include('partials/links-user.ejs') %>

  <section>
    <h2>Excluir Aluno <%= aluno.nome%></h2>
    <p>Confirmar exclus√£o de dados do aluno <%= aluno.nome%></p>

    <form action="/users/<%=aluno.id%>/excluir?_method=delete" method="POST">
      <div>
        <img
          src="https://cdn.icon-icons.com/icons2/2506/PNG/512/user_icon_150670.png"
          alt="avatar"
          height="60"
          width="60"
          style="border-radius: 50%; width: 60px; height: 60px; display: block"
        />
      </div>
      <div>
        <label for="nome">Nome</label>
        <input
          type="text"
          id="nome"
          value="<%= aluno.nome%>"
          name="nome"
          placeholder="Digite o nome do Aluno"
          disabled 
        />
      </div>
      <div>
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          value="<%= aluno.email%>"
          name="email"
          placeholder="Digite o email"
          disabled 
        />
      </div>
      <div>
        <label for="senha">senha</label>
        <input
          type="password"
          id="senha"
          value="<%= aluno.senha%>"
          name="senha"
          placeholder="Digite a senha"
          disabled 
        />
      </div>

      <input type="hidden" name="modifed_at" value="<%= new Date() %>" />
      <button>Excluir aluno</button>
    </form>
  </section>
</main>
<%- include('partials/footer.ejs') %>
