<%- include('partials/header.ejs') %>

<main>
  <%- include('partials/links-user.ejs') %>

  <h2>Excluir Aluno <%= aluno.nome%></h2>
  <section>

    <form action="/users/<%=aluno.id%>/excluir?_method=delete" method="POST">
      <div>
        <label for="nome">Nome</label>
        <input
          type="text"
          id="nome"
          value="<%= aluno.nome%>"
          name="nome"
          placeholder="Digite o nome do Aluno"
          disabled 
        />
      </div>
      <div>
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          value="<%= aluno.email%>"
          name="email"
          placeholder="Digite o email"
          disabled 
        />
      </div>
      <div>
        <label for="senha">senha</label>
        <input
          type="password"
          id="senha"
          value="<%= aluno.senha%>"
          name="senha"
          placeholder="Digite a senha"
          disabled 
        />
      </div>

      <input type="hidden" name="modifed_at" value="<%= new Date() %>" />
      <button>Excluir aluno</button>
    </form>
  </section>
</main>
<%- include('partials/footer.ejs') %>
