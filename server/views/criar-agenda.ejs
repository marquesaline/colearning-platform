<%- include('partials/account-header.ejs') %>

    <main class="main-flex">
        <!-- menu lateral -->
        <%- include('partials/container-side.ejs') %>
        <!-- parte central -->
        <section class="section-main">
            <div class="settings-initial">
                <p class="account-title">Crie sua agenda</p>
                
                <div class="container-form">
                    <form method="post" action="/conta/<%=user.id%>/criar-agenda">
                        <div class="conteiners-form">
                            <label class="form-label" for="title">Nome da agenda</label>
                            <input type="text" name="title" id="title" required>
                        </div>
                        
                        <div class="conteiners-form">
                            <label class="form-label" for="duration">Duração das reuniões</label>
                            <input type="time" name="duration" id="duration" required>
                            <!-- <select class="dropdown"id="agendaDuration">
                                <option value="00:15">00:15</option>
                                <option value="00:30">00:30</option>
                                <option value="01:00">01:00</option>
                                <option value="01:30">01:30</option>
                                <option value="02:00">02:00</option>
                            </select> -->
                        </div>
                        <div class="conteiners-form">
                            <label class="form-label" for="start">Período de agendamento</label>
                            <div class="conteiner-dates">
                                <label for="start">De</label>
                                <input type="date" name="start" id="start" class="input-dates">
                                <label for="end">até</label>
                                <input type="date" name="end" id="end" class="input-dates">
                            </div>
                        </div>
                        <div class="container-availability">
                            <div>
                                <label class="form-label">Disponibilidade</label>
                            </div>
                            <table class="table-availability">
                                <tr>
                                    <td>
                                        <input type="checkbox" name="daysOfWeek" id="" value="0">
                                       
                                    </td>
                                    <td class="td-days">
                                        <label for="daysOfWeek">Domingo</label>
                                    </td>
                                    <td class="td-inputs-times">
                                        <input type="time" name="startTime" id="" class="input-time">
                                        <input type="time" name="endTime" id="" class="input-time">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" name="daysOfWeek" id="" value="1">
                                        
                                    </td>
                                    <td class="td-days">
                                        <label for="daysOfWeek">Segunda</label>
                                    </td>
                                    <td class="td-inputs-times">
                                        <input type="time" name="startTime" id="" class="input-time">
                                        <input type="time" name="endTime" id="" class="input-time">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" name="daysOfWeek" id="" value="2">
                                        
                                    </td>
                                    <td class="td-days">
                                        <label for="daysOfWeek">Terça</label>
                                    </td>
                                    <td class="td-inputs-times">
                                        <input type="time" name="startTime" id="" class="input-time">
                                        <input type="time" name="endTime" id="" class="input-time">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" name="daysOfWeek" id="" value="3">
                                    </td>
                                    <td class="td-days">
                                        <label for="daysOfWeek">Quarta</label>
                                    </td>
                                    <td class="td-inputs-times">
                                        <input type="time" name="startTime" id="" class="input-time">
                                        <input type="time" name="endTime" id="" class="input-time">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" name="daysOfWeek" id="" value="4">
                                    </td>
                                    <td class="td-days">
                                        <label for="daysOfWeek">Quinta</label>
                                    </td>
                                    <td class="td-inputs-times">
                                        <input type="time" name="startTime" id="" class="input-time">
                                        <input type="time" name="endTime" id="" class="input-time">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" name="daysOfWeek" id="" value="5">
                                    </td>
                                    <td class="td-days">
                                        <label for="daysOfWeek">Sexta</label>

                                    </td>
                                    <td class="td-inputs-times">
                                        <input type="time" name="startTime" id="" class="input-time">
                                    
                                        <input type="time" name="endTime" id="" class="input-time">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" name="daysOfWeek" id="" value="6">
                                    </td>
                                    <td class="td-days">
                                        <label for="daysOfWeek">Sábado</label>

                                    </td>
                                    <td class="td-inputs-times">
                                        <input type="time" name="startTime" id="" class="input-time">
                                        <input type="time" name="endTime" id="" class="input-time">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div>
                            <button type="submit" class="btn-default" id="btn-save">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
   
</body>
</html>